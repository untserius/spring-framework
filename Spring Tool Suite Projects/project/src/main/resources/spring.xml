<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- spring takes the responsibility to create object "Serius"-->
    <bean id="Serius" class="com.firstspring.project.Serius">
<!--        This will call the setter method and set the age as 10-->
<!--        <property name="age" value="23"></property>-->

<!--        Use constructor args to use parameterized constructor as injection-->
        <constructor-arg value="12"></constructor-arg>
        <property name="laptop" ref="laptop"></property>
    </bean>

    <bean id="laptop" class="com.firstspring.project.Laptop"></bean>

</beans>
